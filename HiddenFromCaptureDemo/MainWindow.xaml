<Window x:Class="HiddenFromCaptureDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HiddenFromCaptureDemo"
        Title="HiddenFromCapture Demo"
        Height="480" Width="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#FFFFFFFF">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 설명 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="공유에서 숨김 데모" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="아래 영역은 NativeDX Protected SwapChain 으로 그려집니다."/>
        </StackPanel>

        <!-- 보호 영역 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="640" Height="360">
            <local:ProtectedHost/>
        </Border>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnClose" Width="80" Click="BtnClose_Click">닫기</Button>
        </StackPanel>
    </Grid>
</Window>
