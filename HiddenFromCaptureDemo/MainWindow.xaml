<Window x:Class="HiddenFromCaptureDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:local="clr-namespace:HiddenFromCaptureDemo"
        Title="HiddenFromCapture Demo"
        Height="480" Width="640"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#FFFFFFFF">
  <WindowChrome.WindowChrome>
    <shell:WindowChrome ResizeBorderThickness="8" CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
  </WindowChrome.WindowChrome>
  <Grid Margin="16" MouseLeftButtonDown="RootGrid_MouseLeftButtonDown">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- 상단 설명(필요 없으면 지워도 됨) -->
    <StackPanel Grid.Row="0" Margin="0,0,0,12">
      <TextBlock Text="보호된 영역(OBS/디스플레이 캡처 차단)" FontSize="18" FontWeight="Bold"/>
      <TextBlock Text="작업표시줄/Alt+Tab 숨김, 전역 핫키: Ctrl+Alt+Q 종료"/>
    </StackPanel>

    <!-- ▶ Protected SwapChain 표시 영역 -->
    <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <local:ProtectedHost x:Name="Host" />
    </Border>

    <!-- 하단: 닫기 버튼(선택) -->
    <StackPanel Grid.Row="2" Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button x:Name="btnClose" Width="80" Click="BtnClose_Click">닫기</Button>
    </StackPanel>
  </Grid>
</Window>
