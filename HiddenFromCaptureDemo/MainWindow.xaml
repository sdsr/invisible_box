<Window x:Class="HiddenFromCaptureDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HiddenFromCapture Demo" Height="360" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="#FFFFFFFF">
	<!-- 효과(Blur/DropShadow 등) 넣지 마세요 -->
	<Grid Margin="16">
		<StackPanel>
			<TextBlock Text="공유에서 숨김 데모" FontSize="20" FontWeight="Bold"/>
			<TextBlock Margin="0,12,0,0"
					   Text="이 창은 SetWindowDisplayAffinity(WDA_EXCLUDEFROMCAPTURE)로 캡처에서 제외됩니다."/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
				<Button x:Name="btnToggle" Width="160" Margin="0,0,8,0" Click="BtnToggle_Click">숨김 적용 (Enable)</Button>
				<Button Width="80" Click="BtnClose_Click">닫기</Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
